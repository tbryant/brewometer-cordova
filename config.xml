<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="106110" id="com.baronbrew.tiltcordova" version="1.6.11" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Tilt</name>
    <description>
        Reads data from your Tilt.  Buy more Tilts here: http://tilthydrometer.com
    </description>
    <author email="info@baronbrew.com" href="http://tilthydrometer.com">
        Tilt Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="https://*/*" />
    <plugin name="cordova-plugin-ble" />
    <plugin name="com.unarin.cordova.beacon" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <preference name="Orientation" value="all" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="local" />
    </platform>
    <plugin name="cordova-plugin-ios-ble-permissions" spec="^1.0.1" />
    <plugin name="cordova-plugin-android-permissions" spec="~0.10.0" />
</widget>
